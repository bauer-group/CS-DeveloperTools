#!/bin/bash
# =============================================================================
# help-devtools - DevTools Command Reference
# =============================================================================

cat << 'EOF'
╔═══════════════════════════════════════════════════════════════════════════════╗
║                         DevTools Command Reference                            ║
╚═══════════════════════════════════════════════════════════════════════════════╝

━━━ Shell Scripts ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  git-stats.sh              Show comprehensive repository statistics
                            Usage: git-stats.sh

  git-cleanup.sh            Clean up merged/stale branches, prune remotes
                            Usage: git-cleanup.sh [--dry-run] [--force] [--days N]

  git-lfs-migrate.sh        Migrate repository to Git LFS
                            Usage: git-lfs-migrate.sh [OPTIONS]
                            Options:
                              -d, --dry-run    Preview changes without applying
                              -y, --yes        Auto-commit without prompting
                              -p, --pattern    Add custom pattern to track
                              -l, --list       List tracked LFS patterns
                              -s, --status     Show LFS status

━━━ Python Tools ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  git-changelog.py          Generate changelog from commits
                            Usage: git-changelog.py [--from TAG] [--to REF] [-o FILE]
                            Options:
                              --from TAG     Starting ref (default: previous tag)
                              --to REF       Ending ref (default: HEAD)
                              -o FILE        Output to file
                              --all-tags     Generate for all tags
                              --format       Output format: markdown, json, table

  git-release.py            Semantic versioning release manager
                            Usage: git-release.py <command>
                            Commands:
                              current        Show current version
                              next           Suggest next version
                              bump TYPE      Create new version tag
                              release        Interactive release wizard
                              list           List all version tags

━━━ Git Aliases ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  git st                    Short status (git status -sb)
  git lg                    Log graph, 20 commits
  git lga                   Full log graph, all branches
  git co <branch>           Checkout branch
  git br                    List branches with tracking info
  git ci                    Commit
  git df                    Diff (unstaged)
  git dfs                   Diff (staged)
  git last                  Show last commit with stats
  git unstage <file>        Unstage file
  git amend                 Amend last commit (no edit)
  git undo                  Soft reset last commit
  git stash-all             Stash including untracked
  git branches              List branches by date
  git tags                  List tags by version
  git contributors          Show contributor stats
  git file-history <file>   Show file history with diffs

━━━ Environment Variables ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  GIT_USER_NAME             Git user.name (auto-configured)
  GIT_USER_EMAIL            Git user.email (auto-configured)
  PROJECT_PATH              Path to mounted project

━━━ Examples ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

  # Repository overview
  git-stats.sh

  # Clean up old branches (preview)
  git-cleanup.sh --dry-run

  # Migrate to Git LFS
  git-lfs-migrate.sh --dry-run    # Preview
  git-lfs-migrate.sh -y           # Auto-commit
  git-lfs-migrate.sh --status     # Check LFS status

  # Generate changelog
  git-changelog.py -o CHANGELOG.md

  # Create a patch release
  git-release.py bump patch

  # Interactive release
  git-release.py release

EOF
