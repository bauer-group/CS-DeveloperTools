###############################################################################
# Dozzle - Developer Container Monitor
# Configuration
###############################################################################

#------------------------------------------------------------------------------
# General Settings
#------------------------------------------------------------------------------

# Timezone (e.g., Europe/Berlin, America/New_York)
TIME_ZONE=UTC

# Dozzle version (latest, v8.0.0, etc.)
DOZZLE_VERSION=latest

# Exposed port for web interface
DOZZLE_PORT=9999

# Display name shown in UI (appears in title and under logo)
DOZZLE_HOSTNAME=localhost

# Log level: debug, info, warning, error
DOZZLE_LOG_LEVEL=info

#------------------------------------------------------------------------------
# Feature Toggles
#------------------------------------------------------------------------------

# Enable container actions (start, stop, restart)
# WARNING: Allows control over containers via web interface
DOZZLE_ENABLE_ACTIONS=true

# Enable shell access to containers
# WARNING: Security risk - only enable in trusted environments
DOZZLE_ENABLE_SHELL=true

# Disable anonymous analytics
# Set to true to opt-out of usage tracking
DOZZLE_NO_ANALYTICS=true

#------------------------------------------------------------------------------
# Authentication (Optional)
#------------------------------------------------------------------------------

# Auth provider: none, simple, forward-proxy
# - none: No authentication (default)
# - simple: File-based user management (requires users.yml)
# - forward-proxy: External auth via reverse proxy headers
DOZZLE_AUTH_PROVIDER=none

# Session duration (e.g., 24h, 48h, 7d)
DOZZLE_AUTH_TTL=24h

# Path to data directory (for users.yml when using simple auth)
# DOZZLE_DATA_PATH=./data
